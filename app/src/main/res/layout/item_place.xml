<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">


<ImageView
    android:layout_marginTop="23dp"
            android:src="@drawable/picasso"
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    <ImageView
        android:src="@drawable/camp_now"
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="parent" />
        <TextView
            android:text="Picasso Museum"
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imageView"
            app:layout_constraintTop_toTopOf="@id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="10dp" />


        <TextView
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:text="Camp Now"
            android:id="@+id/shortDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/titleText"
            app:layout_constraintTop_toTopOf="@id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="4dp" />
  <ImageView
      android:id="@+id/eifelTower"
      android:src="@drawable/eifelTower"
      android:layout_marginTop="23dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView2"
      android:layout_width="90dp"
      android:layout_height="90dp"/>
    <TextView
        android:textStyle="italic"
        android:text="Eifel Tower"
        android:textSize="20sp"
        android:layout_marginStart="85dp"
        android:paddingTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="@+id/eifelTower"
        app:layout_constraintTop_toTopOf="@+id/eifelTower"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>